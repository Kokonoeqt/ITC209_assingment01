<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/employee_first_name"
        android:hint="@string/employee_first_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/employee_second_name"
        android:hint="@string/employee_second_name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/input_employeeID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/employee_id"
        android:hint="@string/employee_id"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:maxLength="7"/>

    <EditText
        android:id="@+id/input_emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/employee_email_address"
        android:ems="10"
        android:hint="@string/employee_email_address"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColorHint="#78909C" />

    <Button
        android:id="@+id/employee_sbmt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/employee_submit_btn" />


</LinearLayout>